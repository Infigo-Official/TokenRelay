{  
  "proxy": {
    "auth": {
      "tokens": ["your-secure-proxy-token-here"],
      "encryptionKey": "change-this-32-character-key-here"
    },
    "mode": "direct",
    "timeoutSeconds": 300,
    "logBufferMinutes": 20,
    "permissions": {
      "allowTargetConfigOverride": false,
      "allowLogRetrieval": true,
      "allowLogLevelAdjustment": true
    },
    "targets": {
      "httpbin": {
        "endpoint": "https://httpbin.org",
        "healthCheck": {
          "url": "https://httpbin.org/status/200",
          "enabled": true,
          "type": "HttpGet"
        },
        "description": "HTTPBin service - using new healthCheck object with HttpGet type",
        "headers": {
          "User-Agent": "TokenRelay/1.0.0",
          "Accept": "application/json"
        }
      },
      "jsonplaceholder": {
        "endpoint": "https://jsonplaceholder.typicode.com",
        "healthCheckUrl": "https://jsonplaceholder.typicode.com/posts/1",
        "description": "JSONPlaceholder API - using legacy healthCheckUrl (backward compatible)",
        "headers": {
          "Accept": "application/json"
        }
      },
      "internal-api": {
        "endpoint": "https://internal-api.company.com",
        "healthCheck": {
          "url": "https://internal-api.company.com",
          "enabled": true,
          "type": "TcpConnect"
        },
        "description": "Internal company API - using TcpConnect for basic reachability check",
        "authType": "static",
        "headers": {
          "Authorization": "Bearer api-key-here",
          "X-API-Version": "v1"
        }
      },
      "cerm": {
        "enabled": true,
        "endpoint": "http://your-cerm-url",
        "healthCheckUrl": "",
        "description": "CERM API with OAuth password grant (explicit token_endpoint)",
        "authType": "oauth",
        "authData": {
          "token_endpoint": "http://your-cerm-url/oauth/token",
          "grant_type": "password",
          "username": "CERM-Username",
          "password": "CERM-password",
          "client_id": "CERM-clientId",
          "client_secret": "CERM-clientSecret",
          "scope": "scope"
        }
      },
      "another-oauth-api": {
        "enabled": true,
        "endpoint": "https://api.example.com",
        "description": "OAuth API with dynamic token_endpoint (will use https://api.example.com/oauth/token)",
        "authType": "oauth",
        "authData": {
          "grant_type": "password",
          "username": "api-user",
          "password": "api-password",
          "client_id": "client-id",
          "client_secret": "client-secret"
        }
      },
      "netsuite-restlet": {
        "enabled": true,
        "endpoint": "https://1234567.restlets.api.netsuite.com/app/site/hosting/restlet.nl",
        "description": "NetSuite RESTlet with OAuth1 authentication and variables for script/deploy routing",
        "authType": "oauth1",
        "authData": {
          "consumer_key": "your-consumer-key",
          "consumer_secret": "your-consumer-secret",
          "token_id": "your-token-id",
          "token_secret": "your-token-secret",
          "realm": "1234567_SB1",
          "signature_method": "HMAC-SHA256"
        },
        "variables": {
          "script": "customscript_your_restlet",
          "deploy": "customdeploy_your_restlet"
        },
        "healthCheck": {
          "url": "https://1234567.restlets.api.netsuite.com/app/site/hosting/restlet.nl",
          "enabled": true,
          "type": "HttpGet",
          "expectedStatusCodes": [200, 401, 403]
        },
        "headers": {
          "Content-Type": "application/json",
          "Accept": "application/json"
        }
      },
      "generic-oauth1-api": {
        "enabled": true,
        "endpoint": "https://api.twitter.com/2/tweets",
        "description": "Generic OAuth1 API example (Twitter-like). OAuth1 works with any OAuth1 API.",
        "authType": "oauth1",
        "authData": {
          "consumer_key": "your-api-key",
          "consumer_secret": "your-api-secret",
          "token_id": "your-access-token",
          "token_secret": "your-access-token-secret",
          "realm": "twitter.com",
          "signature_method": "HMAC-SHA1"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    }
  },
  "plugins": {
    "fileStorage": {
      "enabled": true,
      "settings": {
        "destinations.documents": "C:\\uploads\\documents",
        "destinations.images": "C:\\uploads\\images",
        "destinations.temp": "C:\\uploads\\temp"
      }
    }
  },
  "logging": {
    "level": "Information",
    "destinations": [
      "console"
    ]
  }
}
